{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <form method="post">

        <h1 class="h3 mb-3 font-weight-normal">Compte</h1>
        <label for="inputLastName" class="sr-only">Nom</label>
        <input type="text" name="lastName" id="inputLastName" class="form-control" placeholder="Nom" required autofocus>
        <label for="inputFirstName" class="sr-only">Prénom</label>
        <input type="text" name="firstName" id="inputFirstName" class="form-control" placeholder="Prénom" required autofocus>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

        <button class="btn btn-lg btn-primary" type="submit">
            Créer
        </button>
    </form>
{% endblock %}