{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <form method="post" class="generic-form">

        <h1 class="h3 mb-3 font-weight-normal">Création de compte</h1>
        <ul>
            <li>
                <label for="inputLastName" class="sr-only">Nom</label>
                <input type="text" name="lastName" id="inputLastName" class="form-control" placeholder="Nom" required
                       autofocus>
            </li>
            <li>
                <label for="inputFirstName" class="sr-only">Prénom</label>
                <input type="text" name="firstName" id="inputFirstName" class="form-control" placeholder="Prénom"
                       required autofocus>
            </li>
            <li>
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required
                       autofocus>
            </li>
            <li>
                <label for="inputPassword" class="sr-only">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe"
                       required>
            </li>
            <li>
                <button class="btn btn-lg btn-primary" type="submit">
                    Créer mon compte
                </button>
            </li>
        </ul>


    </form>
{% endblock %}